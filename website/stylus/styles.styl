$headerLinkHeightWithPadding = 60px
$exampleHeight = 70px

body
  background-color #fff
  margin 0
  font-family 'Roboto Condensed', sans-serif
  font-weight 200

  .header
    position relative
    background-color #343f4c
    color #fff
    height 30%
    min-height 250px
    padding-top 40px
    padding-left 5%
    display flex

    > .background-container
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      opacity 0.1
      background url(resources/herobanner.svg)
      background-size 90% auto
      background-position 100% 95%
      background-repeat no-repeat

    .contents
      width 50%
      padding-top 20px
      display flex
      flex-direction column
      justify-content space-around
      z-index 100

      .header-text
        font-size 42px

      .header-link
        background-color #fff
        border-radius 10px
        color #4c4c4c
        height $headerLinkHeightWithPadding - 20px
        padding 10px 70px 10px 10px
        position relative
        overflow hidden

        pre
          border none
          overflow-x scroll

        .btn-copy
          height $headerLinkHeightWithPadding
          width $headerLinkHeightWithPadding
          background-color #fe9800
          position absolute
          right 0
          top 0
          cursor pointer

          text-align center
          color #fff
          line-height $headerLinkHeightWithPadding

          .background-container
            width 100%
            height 100%
            background url(resources/copy.svg)
            background-size 50% 50%
            background-position 50% 50%
            background-repeat no-repeat

  .examples
    width 50%
    padding-left 5%

    > h4
      margin 20px 0
      font-size 42px
      color #4c4c4c

    .example
      text-decoration none
      border-radius 10px
      background-color #f3f3f3
      height $exampleHeight
      margin-bottom 12px
      padding 10px
      position relative

      display flex
      flex-flow column wrap
      justify-content center
      align-content flex-start

      .icon
        width $exampleHeight
        height $exampleHeight
        margin-right 20px
        border-radius 8px
        color #fff
        text-align center
        line-height $exampleHeight
        font-size 40px

      .title
        font-size 30px

      .subtitle
        color #68d44b
        font-style italic
        font-size 20px

  .phone
    position absolute
    right 5%
    width 30%
    top 20%
    max-height 70%

    .phone-inner
      position relative

      iframe
        position absolute
        left 13.7%
        top 17.5%
        width 71%
        height 66%
